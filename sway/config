# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
#                                  Basic                                              #
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

# 主键(Mod1=<Alt>,Mod4=<Super>)
set $mod   Mod4
set $term  xfce4-terminal
set $term2 alacritty
set $menu_drun   rofi -show drun -theme config

set $left  h
set $down  j
set $up    k
set $right l

# 窗口
set $ws1 1:🏛 Term
set $ws2 2:♨ Edit
set $ws3 3:🔍 Browser
set $ws4 4:💻 Vbox
set $ws5 5:📺 Video
set $ws6 6:🎶 Music
set $ws7 7:🕸 Office
set $ws8 8:🎮 Game
set $ws9 9:HDMI
set $ws0 10:🕸 OBS
set $wsNULL Null

# 图片
#set $img_bg     ~/Pictures/bg/flowers/02.jpg
#set $img_bg     ~/Pictures/bg/mac/iPhone.jpg
set $img_bg     ~/Pictures/bg/people/44.jpg

#set $img_lock   swaylock -e -F -f -i ~/Pictures/bg/flowers/01.jpg
set $img_lock   swaylock -e -F -f -i ~/Pictures/bg/people/04.jpg
#set $img_lock   swaylock -e -F -f -i ~/Pictures/bg/win/027.jpg

# 截屏
set $screenshot_full grim ~/Pictures/$(date +%Y-%m-%d-%H-%M-%S).jpg -t jpeg
set $screenshot_part grim -g "$(slurp)" ~/Pictures/$(date +%Y-%m-%d-%H-%M-%S).jpg -t jpeg
set $screenshot_panel "bash -c ~/.config/sway/screenshot_panel.sh"

# 应用在特定窗口启动
# swaymsg -t get_tree | grep "app_id"
assign [app_id="gedit"] $ws2
assign [class="VSCodium"] $ws2
assign [class="firefox"] $ws3
assign [class="Chromium"] $ws3
assign [class="netease-cloud-music"] $ws6
assign [class="Steam"] $ws8
assign [class="obs"] $ws0


# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
#                                  Output Display                                     #
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

# 外接显示器
workspace $ws9 output HDMI-A-1

# 获取屏幕信息:swaymsg -t get_outputs
# man 5 sway-output
output * {
	# 背景:fill|fit|center|tile
  #      拉伸|填充|合适|居中|瓷砖 
	background $img_bg fill
  # 填充可提供回退颜色以覆盖输出的剩余部分
  # background $img_bg fit #FF0000
  # 单色填充
  # background #FF0000 solid_color
 
	# 分辨率
	resolution 1920x1080@60Hz
	# 缩放,HiDPI不支持Xwayland客户端(窗口将变得模糊)。
 	scale      0
  # 缩放输出:linear|nearest|smart
  #           模糊|线性|智能
  scale_filter linear
  # 色彩模式:rgb|bgr|vrgb|vbgr|none
  subpixel rgb
	# 屏幕旋转
	transform  0
  # 延迟渲染
  max_render_time 1
  # 通过DPMS启用或禁用指定的输出
 	# dpms on   
  # 切换输出
 	# toggle    
  # 禁用|启用输出
  # disable|enable
}

output eDP-1 {

}

output HDMI-A-1 {

}

# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
#                                        Input                                        #
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

# swaymsg -t get_inputs
# man 5 sway-input

# 触摸板设置
input "2:14:ETPS/2_Elantech_Touchpad" {
  dwt              enabled
  tap              enabled
  # 自然滚动方式
  natural_scroll   disenabled
  middle_emulation enabled
  # 灵敏度
  pointer_accel    0.7
  # 翻页速度
  scroll_factor 5
  # 手指映射
  # lrm:1个手指视为左击，2个手指视为右击，3个手指视为中击 
  # lmr:1指视为左击，2指视为中键单击，3指视为右击
  tap_button_map lrm
}

# 指点杆
input "2:14:ETPS/2_Elantech_TrackPoint" {
  tap              enabled
  # 自然滚动方式
  natural_scroll   disenabled
  # 灵敏度
  pointer_accel    0.7
  # 翻页速度
  scroll_factor 5
}

# 键盘设置
# man 7 xkeyboard-config
input "6058:20564:Thinkpad_Extra_Buttons" {
  # 键盘布局
  xkb_layout   us,de
  xkb_variant  ,nodeadkeys
  xkb_options  grp:alt_shift_toggle
  # 启用CapsLock
  xkb_capslock enabled
  # 启用NumLock
  xkb_numlock enabled
  # 键盘重复延迟速率
  repeat_delay 500
  repeat_rate  5

  # 将输入映射到指定的输出。只有当设备是指针、触摸或绘图平板设备时才有意义。
  # map_to_output 
}


# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
#                                        自启                                         #
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 
exec mocp &
exec fcitx

exec swayidle -w \
                timeout 300 $img_lock \
                timeout 600 'swaymsg "output * dpms off"' \
                resume 'swaymsg "output * dpms on"' \
                before-sleep $img_lock 

# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
#                                        Keys                                         #
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

# 执行< shell命令>
# exec <shell command>

# 与exec类似，但是shell命令将在重新加载后再次执行。
# exec_always < shell命令>

# 打开终端
bindsym $mod+Return workspace $ws1; exec $term
bindsym $mod+Shift+Return workspace $ws1; exec $term2

# 打开应用菜单
bindsym $mod+o exec $menu_drun

# 打开文件管理器
bindsym $mod+e exec $term -e ranger
bindsym $mod+Shift+e exec pcmanfm

# 关闭面板
bindsym $mod+q kill

# 音量(F1:0,F2:-,F3:+)
bindsym XF86AudioMute exec "amixer set Master toggle && amixer set Speaker on"
bindsym XF86AudioLowerVolume exec amixer set Master playback 5-  
bindsym XF86AudioRaiseVolume exec amixer set Master playback 5+  

# 麦克风开关(F4)
bindsym XF86AudioMicMute exec "amixer set Capture toggle"

# 亮度(F5:-,F6:+)
bindsym XF86MonBrightnessDown exec "brightnessctl specific 5%-"
bindsym XF86MonBrightnessUp exec "brightnessctl specific 5%+"

# 面板分割方向
bindsym $mod+v splitv
bindsym $mod+b splith

# 面板布局
bindsym $mod+c layout toggle split
bindsym $mod+Shift+v layout stacking
bindsym $mod+Shift+b layout tabbed

# 面板全屏
bindsym $mod+f fullscreen

# 面板悬浮|平铺
bindsym $mod+Shift+space floating toggle

# 面包悬浮时改变焦点
bindsym $mod+space focus mode_toggle

# 父焦点
bindsym $mod+a focus parent

# 隐藏面板
bindsym $mod+Shift+minus move scratchpad

# 显示面板
bindsym $mod+minus scratchpad show

# 移动面板焦距
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

# 移动面板
bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$up    move up
bindsym $mod+Shift+$right move right

# 切换窗口
bindsym $mod+d workspace $wsNULL
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0

# 移动面版至指定窗口,并切换至此窗口
bindsym $mod+Shift+1 move container to workspace $ws1;workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2;workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3;workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4;workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5;workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6;workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7;workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8;workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9;workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0;workspace $ws0

# 返回上一次活动的窗口
workspace_auto_back_and_forth no
bindsym $mod+z workspace back_and_forth
# 移动面板至上一次活动的窗口
bindsym $mod+Shift+z move container to workspace back_and_forth; workspace back_and_forth

# 切换到下一个|上一个窗口
bindsym $mod+period workspace next
bindsym $mod+comma workspace prev


# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
#                                        Mode                                         #
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

# 截屏
bindsym Print mode "$screenshot"
set $screenshot ScreenShot => (1)Full (2)Part (3)Panel
mode "$screenshot" {
  bindsym 1 exec $screenshot_full  ,mode "default"
  bindsym 2 exec $screenshot_part  ,mode "default"
  bindsym 3 exec $screenshot_panel ,mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym Print  mode "default"
}

# 调整面板样式
bindsym $mod+m mode "$border_style"
set $border_style Border Style => (1)无标题无边框 (2)有标题无边框 (3)有标题有边框
mode "$border_style" {
	bindsym 1 border none     ,mode "default"
	bindsym 2 border normal 0 ,mode "default"
	bindsym 3 border normal 3 ,mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+m mode "default"
}

# sway
bindsym $mod+s mode "$sway"
set $sway swaywn => (r)eload (l)ock (b)ar (e)xit_Swaywm
mode "$sway" {
  bindsym r reload            ,mode "default"
  bindsym l exec $img_lock    ,mode "default"
  bindsym b bar  mode toggle  ,mode "default"
  bindsym e exec swaymsg exit ,mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+s mode "default"
}

# 系统
bindsym $mod+Shift+s mode "$system"
set $system System => (r)eboot (p)oweroff (s)uspend(men) (h)ibernate(swap)
mode "$system" {
  bindsym r       exec systemctl reboot                 ,mode "default"
  bindsym p       exec systemctl poweroff               ,mode "default"
  bindsym s       exec systemctl suspend && $img_lock   ,mode "default"
  bindsym h       exec systemctl hibernate && $img_lock ,mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+Shift+s mode "default"
}

# 调整面板大小
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym $left  resize grow   width  10px
    bindsym $down  resize shrink height 10px
    bindsym $up    resize grow   height 10px
    bindsym $right resize shrink width  10px

    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym $mod+r mode "default"
}

# Browser
set $browser Browser => (f)irefox (c)hromium
bindsym Alt+b mode "$browser"
mode "$browser" {
	bindsym f workspace $ws3 ,exec firefox  ,mode "default"
  bindsym c workspace $ws3 ,exec chromium ,mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym Alt+b mode "default"
}

# Office
set $wps Office => (w)ork (e)xcel (p)pt (P)df
bindsym Alt+o mode "$wps"
mode "$wps" {
  bindsym w workspace $ws7 ,exec wps ,mode "default"
  bindsym e workspace $ws7 ,exec et  ,mode "default"
  bindsym p workspace $ws7 ,exec wpp ,mode "default"
  bindsym Shift+p workspace $ws7 ,exec wpspdf ,mode "default"


  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym Alt+o mode "default"
}

# Text
set $text Txt => (v)scodium (g)edit
bindsym Alt+t mode "$text"
mode "$text" {
  bindsym v workspace $ws2 ,exec codium ,mode "default"
  bindsym g workspace $ws2 ,exec gedit  ,mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym Alt+t mode "default"
}

# 录制
set $recording recording => (1)voice (2)screen (3)obs
bindsym $mod+g mode "$recording"
mode "$recording" {
  bindsym 1 exec deepin-voice-recorder  ,mode "default"
  bindsym 2 exec deepin-screen-recorder ,mode "default"
  bindsym 3 workspace $ws0; exec obs    ,mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+g mode "default"
}


# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
#                                        Theme                                         #
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 
set $white  #FFFFFF
set $white1 #F2EEEDD0
set $black1 #666666
set $blue1  #87CEFA
set $pink1  #FF69B4
set $rgba   #00000000

# 面板分割默认方向:horizontal|vertical|auto
#                   垂直|水平|自动
default_orientation  horizontal

# 设置新平铺窗口的默认边框样式
# normal|none|pixel [<n>]
default_border normal 3

# 新窗口初始布局:default|stacking|tabbed
#                默认|水平堆叠|垂直堆叠
workspace_layout default

# 是否启用xwayland:enable|disable|force
xwayland enable

# 窗口间隙
gaps inner 20
gaps outer 0

# 可用鼠标拖拽悬浮窗口
floating_modifier $mod normal

# 标题栏字体字号
font pango: Source Code Pro Medium 13

# 标题栏文字对齐方式(left|center|right)
title_align center

# 标题栏高度
titlebar_padding 5

#						            标题栏边框 标题栏背景 标题栏字体 分裂线    边框线
# 选中面板
client.focused          $white1    $white1    $black1    $pink1     $white1
# 选中过但焦距不在此的面板
client.focused_inactive $white1    $white1    $black1    $white1    $white1
# 未选中的面板
client.unfocused        $white1    $white1    $black1    $white1    $white1
# 紧急提示的面板
client.urgent           $white1    $white1    $pink1     $white1    $white1

bar {
    id 1
    status_command          py3status -c ~/.config/sway/pystatus
    # 去除窗口编号
    strip_workspace_numbers yes
    # 状态栏分隔符 
    separator_symbol        " "
    # 顶部 右侧 底部 左侧
    gaps 10 10 10 10
    position                top
    font pango:             Source Code Pro Medium 13
    # 高度
  	height                  30
  	pango_markup            enabled

 colors {
 
	    # 字体颜色
      statusline  $black1
	    # 背景颜色
      background  $white1
		  # 分隔符颜色
      separator   $blue1
      #                  边框      背景      字体
	  	# 选中编号窗口
      focused_workspace  $white1   $white1   $pink1
	  	# 未选中编号窗口
      inactive_workspace $white1   $white1   $black1
	  	# 活动编号窗口
      active_workspace   $blue1    $blue1    $white
      # 紧急活动的窗口
      urgent_workspace   $blue1    $blue1    $white
  	  # 模块
      binding_mode       $blue1    $blue1    $white
    }
}
